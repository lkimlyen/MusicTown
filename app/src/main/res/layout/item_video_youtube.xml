<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/distance_16dp">

    <RelativeLayout
        android:layout_width="@dimen/size_55dp"
        android:layout_height="@dimen/size_55dp">

        <ImageView
            android:id="@+id/iv_thumb"
            android:layout_width="@dimen/size_55dp"
            android:layout_height="@dimen/size_55dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_alignParentEnd="true"
            android:id="@+id/tv_time"
            android:layout_margin="3dp"
            android:layout_alignParentBottom="true"
            android:background="#80000000"
            android:padding="@dimen/distance_2dp"
            android:textColor="@color/white"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/distance_8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u2022"
                android:textColor="@color/white"
                android:textSize="@dimen/text_14sp" />

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="0"
        android:padding="@dimen/distance_8dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_download" />
</LinearLayout>