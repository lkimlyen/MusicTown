<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/distance_16dp"
    android:paddingEnd="@dimen/distance_16dp"
    android:layout_marginTop="@dimen/distance_16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"

        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_position"
            android:textSize="@dimen/text_14sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_name"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14sp"
            android:layout_marginStart="@dimen/distance_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/distance_16dp"
        android:background="@color/brownishGrey"/>
</LinearLayout>