<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#F2F3F4"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@drawable/bg_dashboard"
        android:orientation="horizontal"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="?selectableItemBackgroundBorderless"
                android:padding="@dimen/distance_8dp"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/text_setting"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/text_16sp"
                android:textStyle="bold" />


        </RelativeLayout>
    </android.support.v7.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/ll_check_version"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/distance_8dp"
                    android:layout_marginEnd="@dimen/distance_4dp"
                    android:layout_marginTop="@dimen/distance_8dp"
                    android:layout_marginBottom="@dimen/distance_4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/whiteThree">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/distance_16dp"
                            android:src="@drawable/ic_update" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"

                            android:layout_marginBottom="@dimen/distance_16dp"
                            android:text="@string/text_check_update_app" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/ll_backup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/distance_4dp"
                    android:layout_marginEnd="@dimen/distance_8dp"
                    android:layout_marginBottom="@dimen/distance_4dp"
                    android:layout_marginTop="@dimen/distance_8dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/whiteThree">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/distance_16dp"
                            android:src="@drawable/ic_database" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"  android:textColor="@color/black"
                            android:layout_marginBottom="@dimen/distance_16dp"
                            android:text="@string/text_backup_data" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/ll_reset_data"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/distance_8dp"
                    android:layout_marginEnd="@dimen/distance_4dp"
                    android:layout_marginTop="@dimen/distance_4dp"
                    android:layout_marginBottom="@dimen/distance_4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/whiteThree">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/distance_16dp"
                            android:src="@drawable/ic_refresh" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"

                            android:layout_marginBottom="@dimen/distance_16dp"
                            android:text="@string/text_reset_data" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/ll_clear_image"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/distance_4dp"
                    android:layout_marginEnd="@dimen/distance_8dp"
                    android:layout_marginBottom="@dimen/distance_4dp"
                    android:layout_marginTop="@dimen/distance_4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/whiteThree">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/distance_16dp"
                            android:src="@drawable/ic_delete_image" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"  android:textColor="@color/black"
                            android:layout_marginBottom="@dimen/distance_16dp"
                            android:text="@string/text_clear_image" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:id="@+id/ll_change_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/distance_8dp"
                    android:layout_marginEnd="@dimen/distance_4dp"
                    android:layout_marginTop="@dimen/distance_4dp"
                    android:layout_marginBottom="@dimen/distance_4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/whiteThree">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/distance_16dp"
                            android:src="@drawable/ic_change_password" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"

                            android:layout_marginBottom="@dimen/distance_16dp"
                            android:text="@string/text_change_password" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/ll_logout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/distance_4dp"
                    android:layout_marginEnd="@dimen/distance_8dp"
                    android:layout_marginBottom="@dimen/distance_4dp"
                    android:layout_marginTop="@dimen/distance_4dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/whiteThree">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:padding="@dimen/distance_16dp"
                            android:src="@drawable/ic_logout" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"  android:textColor="@color/black"
                            android:layout_marginBottom="@dimen/distance_16dp"
                            android:text="@string/text_logout" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_54dp"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/distance_8dp"
                android:layout_marginEnd="@dimen/distance_8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/text_logout"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_14sp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>