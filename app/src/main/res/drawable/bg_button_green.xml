<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>

            <gradient android:startColor="#01CCD8" android:endColor="#0280BB"/>
            <corners
                android:radius="20dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#00F1FF" android:endColor="#009eff"/>
            <corners
                android:radius="20dp" />
        </shape>
    </item>
</selector>
